receivers:
  otlp:
    protocols:
      grpc:
        endpoint: "otel-collector:4317"
      http:
        endpoint: "otel-collector:4318"

processors:
  batch:
    send_batch_size: 100
    timeout: 10s
  attributes:
    actions:
      - key: service.name
        value: "gemini-cli"
        action: upsert
  memory_limiter:
    check_interval: 1s
    limit_mib: 200
    spike_limit_mib: 50

exporters:
  debug:
    verbosity: detailed
  file:
    path: /var/lib/otel/collector_${LOG_FILE_DATETIME}.log  # Specify the file path
    format: json  # Optional: Specify the format (json, text)

service:
  pipelines:
    traces:
      receivers: [otlp]
      processors: [memory_limiter, batch, attributes]
      exporters: [debug]
    metrics:
      receivers: [otlp]
      processors: [memory_limiter, batch, attributes]
      exporters: [debug]
    logs:
      receivers: [otlp]
      processors: [memory_limiter, batch, attributes]
      exporters: [debug, file]
